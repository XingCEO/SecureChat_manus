# 安全聊天系統環境變數配置

# 服務器配置
NODE_ENV=development
PORT=3000

# 資料庫配置 (Supabase)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT 密鑰 (生產環境中請使用強密碼)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# 加密密鑰
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS 配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com

# 威脅檢測配置
THREAT_DETECTION_ENABLED=true
MAX_LOCATION_SPEED=50
NORMAL_USAGE_HOURS=6-23
MAX_TYPING_DEVIATION=30

# 應急設置
AUTO_DESTROY_HOURS=24
EMERGENCY_PASSWORD=emergency-password-change-this

# 日誌配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

